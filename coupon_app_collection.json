                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"country_code\": \"+91\",\n    \"number\": \"7907975711\",\n    \"password\": \"afsal@123\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/auth/login",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "auth",
                                "login"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Coupons",
            "item": [
                {
                    "name": "List All Coupons",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/coupons/?skip=0&limit=100&active_only=false",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "coupons",
                                ""
                            ],
                            "query": [
                                {
                                    "key": "skip",
                                    "value": "0"
                                },
                                {
                                    "key": "limit",
                                    "value": "100"
                                },
                                {
                                    "key": "active_only",
                                    "value": "false"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Get Coupon by ID",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/coupons/{{coupon_id}}",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "coupons",
                                "{{coupon_id}}"
                            ]
                        }
                    }
                },
                {
                    "name": "Create Coupon (Admin)",
                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{access_token}}",
                                    "type": "string"
                                }
                            ]
                        },
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"code\": \"NEWCODE\",\n    \"title\": \"New Coupon Title\",\n    \"description\": \"Coupon description here\",\n    \"discount_type\": \"percentage\",\n    \"discount_amount\": 15.0,\n    \"min_purchase\": 30.0,\n    \"max_uses\": 200,\n    \"expiration_date\": \"2026-12-31T23:59:59\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/coupons/",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "coupons",
                                ""
                            ]
                        }
                    }
                },
                {
                    "name": "Update Coupon (Admin)",
                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{access_token}}",
                                    "type": "string"
                                }
                            ]
                        },
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"title\": \"Updated Coupon Title\",\n    \"discount_amount\": 30.0,\n    \"is_active\": true\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/coupons/{{coupon_id}}",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "coupons",
                                "{{coupon_id}}"
                            ]
                        }
                    }
                },
                {
                    "name": "Delete Coupon (Admin)",
                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{access_token}}",
                                    "type": "string"
                                }
                            ]
                        },
                        "method": "DELETE",
                        "url": {
                            "raw": "{{base_url}}/coupons/{{coupon_id}}",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "coupons",
                                "{{coupon_id}}"
                            ]
                        }
                    }
                }
            ]
        },
