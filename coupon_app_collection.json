    "item": [
        {
            "name": "Auth",
            "item": [
                {
                    "name": "Register User",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"country_code\": \"+91\",\n    \"number\": \"9876543210\",\n    \"password\": \"mypassword123\",\n    \"full_name\": \"Test User\",\n    \"second_name\": \"Account\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/auth/register",
